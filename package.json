{
    "name": "lorin",
    "version": "2.0.3-test",
    "description": "Lorin is a lightweight, dependency-free Express.js middleware for colorful, categorized logging of API requests, with both console output and file storage.",
    "type": "module",
    "main": "dist/cjs/index.cjs",
    "module": "dist/esm/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        "import": "./dist/esm/index.mjs",
        "require": "./dist/cjs/index.cjs",
        "types": "./dist/index.d.ts"
    },
    "scripts": {
        "build": "pnpm run clean && pnpm run build:types && pnpm run build:esm && pnpm run build:cjs",
        "build:esm": "tsc -p tsconfig.esm.json && mv dist/esm/index.js dist/esm/index.mjs",
        "build:cjs": "tsc -p tsconfig.cjs.json && mv dist/cjs/index.js dist/cjs/index.cjs",
        "build:types": "tsc -p tsconfig.json",
        "clean": "rm -rf dist",
        "spell": "cspell lint .",
        "format.check": "prettier . --check",
        "format": "prettier . --write",
        "lint": "eslint ./src/"
    },
    "keywords": [
        "lorin",
        "express",
        "logger",
        "middleware",
        "logging",
        "express-logger"
    ],
    "author": "Shakti Ranjan Debata <debatashaktiranjan@gmail.com>",
    "repository": "d-shaktiranjan/lorin",
    "homepage": "https://github.com/d-shaktiranjan/lorin/blob/main/README.md",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@types/express": "^5.0.0",
        "cspell": "^8.17.5",
        "eslint": "^9.22.0",
        "globals": "^16.0.0",
        "prettier": "^3.5.3",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.1"
    },
    "packageManager": "pnpm@10.6.4"
}
